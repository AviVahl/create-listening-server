    "@types/node": "8",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^2.6.3",
    "tslint": "^5.12.1",
    "typescript": "~3.3.3"
  },
  "files": [
    "cjs",
    "src",
    "!src/tsconfig.json"
  ],
