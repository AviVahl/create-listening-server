{
  "name": "create-listening-server",
  "description": "Promise-based API to create listening `http.Server` instances.",
  "version": "2.1.0",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "node -e \"fs.rmSync('./dist', { recursive: true, force: true })\"",
    "prebuild": "npm run clean",
    "build": "tsc",
    "lint": "eslint",
    "pretest": "npm run lint && npm run build",
    "test": "node --test --enable-source-maps \"src/test/**/*.test.ts\"",
    "prepack": "npm run build"
  },
  "devDependencies": {
    "@types/node": "22",
    "eslint": "^9.36.0",
    "prettier": "^3.6.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "files": [
    "dist",
    "src",
    "!*/test"
  ],
  "engines": {
    "node": ">=22"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/AviVahl/create-listening-server.git"
  }
}
